<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin = "10dp"
    android:background="@drawable/cardview_drawable">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="95">

        <TextView
            android:id="@+id/parkID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park ID"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/parkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park Name" />

        <TextView
            android:id="@+id/san"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanctuary Name" />

        <TextView
            android:id="@+id/bor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borough" />

        <TextView
            android:id="@+id/acre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acres" />

        <TextView
            android:id="@+id/directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directions" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descriptions" />

        <TextView
            android:id="@+id/hab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habitat Type" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:background="#444444">
    </LinearLayout>

</LinearLayout>